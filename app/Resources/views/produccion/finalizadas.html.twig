{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content">
        <ol class="breadcrumb">
            <li class="">
                <a href="index.html">Inicio</a>
            </li>
            <li class="active">
                <a href="index.html">Escritorio</a>
            </li>
        </ol>
        <div class="page-heading">            
            <h1>Escritorio
                <small>Novedades</small>
            </h1>
            <div class="options">
                <a href="{{path('produccion_list', {'user': app.user.id})}}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Volver al Listado">
                    <i class="fa fa-chevron-left"></i>
                </a>                
            </div>
        </div>
        
        <div class="container-fluid">  
            <div class="row"><!-- .row -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><!-- .col -->
                    <div class="panel panel-default"><!-- .panel -->    
                        <div class="panel-body no-padding"><!-- .panel-body -->
                            <h3 class="text-center">Listado de Ordenes finalizadas por el usuario {{user}}</h3>
                            <div class="table-responsive"><!-- .table-responsive -->
                                <table class="table table-bordered table-hover table-striped table-data"><!-- .table -->
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Numero de pedido</th>
                                            <th>Cliente</th>
                                            <th>Numero Orden produccion</th>
                                            <th>Fecha Entrega</th>
                                            <th>Hora de Entrega</th>
                                            <th>Detalle</th>
                                            <th>Prioridad</th>                
                                            <th>Responsable de produccion</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% set count = 0 %}
                                    {% for orden in ordenes %}
                                        {% set count = count + 1 %}
                                        <tr>
                                            <td>{{ count }}</td>
                                            <td>{{ orden.pedido.numero }}</td>
                                            <td>{{ orden.pedido.cliente }}</td>
                                            <td>{{ orden.numero }}</td>
                                            <td>{{ orden.fechaEntrega|date('m-d') }}</td>
                                            <td>{{ orden.fechaEstimada|date('h:i A') }}</td>
                                            <td>{{ orden.detalle }}</td>
                                            <td>{{ orden.prioridad }}</td>                
                                            <td>{{ orden.responsableProduccion }}</td>
                                            <td>{{ orden.estado }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table><!-- /.table -->
                            </div><!-- /.table-responsive -->
                        </div><!-- /.panel-body -->
                    </div><!-- .panel --> 
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div> <!-- /.container-fluid -->        
    </div> <!-- #page-content -->
{% endblock %}