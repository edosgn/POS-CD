{% extends 'frontend.html.twig' %}

{% block content %}
	<div class="page-content">
		<ol class="breadcrumb">
			<li class="">
				<a href="index.html">Inicio</a>
			</li>
			<li class="active">
				<a href="index.html">Escritorio</a>
			</li>
		</ol>
		<div class="page-heading">            
			<h1>Ordenes para entregar en Punto de Venta
				<small>Novedades</small>
			</h1>
			<div class="options">
				<a href="{{path('homepage')}}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Regresar" >
                    <i class="fa fa-chevron-left"></i>
                </a>
			</div>
		</div>
		<div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
            	{% if ordenesProduccionDetalleEntregar|length != 0 %}
            	{% for ordenPuntoVenta in ordenesProduccionDetalleEntregar %}
	                <div class="col-xs-12 col-sm-3">                	                  
	                    <div class="card profile-card"><!-- .card -->
	                        <div class="card-content"><!-- .card-content -->
	                            <div class="card-image">
	                                <h3 class="card-image-headline text-shadow">{{ ordenPuntoVenta.ordenProduccion.pedido.numero}}
	                                    <small>{{ ordenPuntoVenta.ordenProduccion.numero }}</small>
	                                </h3>
	                                <div class="ripple-container"></div>
	                            </div>

	                            <div class="card-body"><!-- .card-body -->
	                                <p><!-- .p -->
	                                    <i class="fa fa-credit-card"></i>
	                                    <strong>Detalle: </strong>
	                                    {{ ordenPuntoVenta.detalle }}  
	                                </p><!-- /.p -->
	                                <p><!-- .p -->
	                                    <i class="fa fa-phone"></i> 
	                                    <strong>Cliente: </strong>
	                                    {{ ordenPuntoVenta.ordenProduccion.pedido.cliente }}
	                                </p><!-- /.p -->
	                                <p><!-- .p -->
	                                    <i class="fa fa-envelope"></i>
	                                    <strong>Telefono Cliente:</strong>
	                                    {{ ordenPuntoVenta.ordenProduccion.pedido.cliente.telefono }}
	                                </p><!-- /.p -->                                
	                            </div><!-- .card-body -->

	                            <footer class="card-footer pt-n text-center"><!-- .card-footer -->
	                                <div class="btn-group">
	                                    <a href="{{path('entregar_punto_venta_show',{'id':ordenPuntoVenta.id})}}" class="btn btn-info btn-raised" data-toggle="tooltip" data-placement="top" title="Ver">
	                                        <i class="fa fa-eye"></i>
	                                    </a>                                    
	                                </div>
	                            </footer><!-- /.card-footer -->
	                        </div><!-- /.card-content -->
	                    </div><!-- /.card -->
	                </div><!-- /.col -->
	            {% endfor %}
	        	{% else %}
	        		<h2 class="text-center text-danger">
                        <i class="fa fa-exclamation-triangle fa-2x"></i>
                        <br>
                        No hay ordenes para entregar en punto de venta.
                    </h2>
	        	{% endif %}
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
  	</div> <!-- #page-content -->
{% endblock %}