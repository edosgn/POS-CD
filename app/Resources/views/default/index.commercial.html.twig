{% block javascripts %}
    <script type="text/javascript">

    $('#btn-buscar').click(function(e){
        e.preventDefault();
        var url = $(this).data('url');
        var formData = $( "#form-cliente" ).serialize();
            
        $.ajax({
            type: 'POST',
            url: url,
            data : formData,
            dataType : 'json',
            success: function(data) {
                $.each(data,function(i,item){                    
                    validateId(item);
                });
            },
            error: function() {
                console.log('Error!');
            }
        });                     
    });

    function validateId(item){
        //console.log(item.ban);
        //console.log(item);
        var cliente=item.idCliente;
        var url="{{ path('pedido_new', {'idCliente':'cliente'})}}";
        var url=url.replace("cliente",item.idCliente);
        if (item.ban == true) {            
            $('#div-cliente-ok').fadeIn('slow');
            $('#div-cliente').fadeOut('fast');
            //Reemplazar href por url
            $("#newPedido").attr("href", url);
        }else{
            $('#div-cliente').fadeIn('slow');
            $('#div-cliente-ok').fadeOut('fast');
        }
    }    

    </script>
