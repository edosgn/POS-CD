				<a href="{{ path('acceso_pedido') }}" class="btn btn-primary btn-raised" data-toggle="tooltip" data-placement="top" title="AÃ±adir Pedido">
                    <i class="fa fa-cart-plus"></i>
                </a>
                <a href="{{ path('pedido_index') }}" class="btn btn-warning btn-raised" data-toggle="tooltip" data-placement="top" title="Buscar Pedido">
                    <i class="fa fa-search"></i>
                </a>
				{% endif %}
			</div>
		</div>
		
