{% extends 'base.html.twig' %}

{% block body %}
	{% for flashMessage in app.session.flashbag.get('info') %}
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          {{ flashMessage }}
      </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          {{ flashMessage }}
      </div>
    {% endfor %}
	
    <div class="container" id="login-form">
    		<a href="#" class="login-logo">
				<img src="{{asset('img/init/logo-lg-bk.png')}}" width="250px">
			</a>
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>Recuperar Contraseña</h2>
					</div>
					<div class="panel-body">
						
						<form action="{{path('usuario_password_recovery')}}" method="POST" class="form-horizontal" id="validate-form">
							<div class="form-group mb-md">
		                        <div class="col-xs-12">
		                        	<div class="input-group">							
										<span class="input-group-addon">
											<i class="ti ti-user"></i>
										</span>
										<input type="email" class="form-control" placeholder="Correo" name="textCorreo" autofocus="autofocus" required>
									</div>
		                        </div>
							</div>
							<div class="clearfix">
								<a href="{{path('usuario_login')}}" class="btn btn-default btn-raised pull-left">
									Volver
								</a>
								<button type="submit" class="btn btn-primary btn-raised pull-right">
									Restaurar
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript">
      $('body').removeClass('animated-content infobar-overlay').addClass('focused-form animated-content');
    </script>
{% endblock %}