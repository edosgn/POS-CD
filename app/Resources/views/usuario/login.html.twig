{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
	    <span class="label label-danger">
	        {{ error.message| replace({
	    "Bad credentials": "Error! Identificación y/o Contraseña Invalida."
	    }) }}
	    </span>
	{% endif %}
	
    <div class="container" id="login-form">
    		<a href="#" class="login-logo">
				<img src="{{asset('img/init/logo-lg-bk.png')}}" width="250px">
			</a>
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>Autenticación</h2>
					</div>
					<div class="panel-body">
						
						<form action="{{path('usuario_login_check')}}" method="POST" class="form-horizontal" id="validate-form">
							<div class="form-group mb-md">
		                        <div class="col-xs-12">
		                        	<div class="input-group">							
										<span class="input-group-addon">
											<i class="ti ti-user"></i>
										</span>
										<input type="email" class="form-control" placeholder="Correo" name="_username" required autofocus>
									</div>
		                        </div>
							</div>

							<div class="form-group mb-md">
		                        <div class="col-xs-12">
		                        	<div class="input-group">
										<span class="input-group-addon">
											<i class="ti ti-key"></i>
										</span>
										<input type="password" class="form-control" id="exampleInputPassword1" name="_password" placeholder="Contraseña">
									</div>
		                        </div>
							</div>

							<div class="form-group mb-n">
								<div class="col-xs-12">
									<a href="{{path('usuario_password_recovery')}}" class="pull-left">
										Olvido su contraseña?
									</a>
								</div>
							</div>
							<div class="clearfix">
								<button type="submit" class="btn btn-primary btn-raised pull-right">
									Ingresar
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript">
      $('body').removeClass('animated-content infobar-overlay').addClass('focused-form animated-content');
    </script>
{% endblock %}