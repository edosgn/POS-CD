{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content"><!-- .page-content -->
        <ol class="breadcrumb"><!-- .breadcrumb -->
            <li class="">
                <a href="{{ path('homepage') }}">Inicio</a>
            </li>
            <li class="active">
                <a href="{{ path('venta_index') }}">Ventas</a>
            </li>
        </ol><!-- /.breadcrumb -->
        <div class="page-heading"><!-- .page-heading -->
            <h1>Ventas
                <small>Listado</small>
            </h1>
            <div class="options">
                <a href="{{ path('venta_new') }}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Categoria">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div><!-- /.page-heading -->

        <div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><!-- .col -->
                    <div class="panel panel-default"><!-- .panel -->    
                        <div class="panel-body no-padding"><!-- .panel-body -->
                            <div class="table-responsive"><!-- .table-responsive -->
                                <table class="table table-bordered table-hover table-striped table-data"><!-- .table -->
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Articulo</th>
                                            <th>Precio</th>
                                            <th>Fecha</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% set count = 0 %}
                                    {% for venta in ventas %}
                                        {% set count = count + 1 %}
                                        <tr>
                                            <td>{{ count }}</td>
                                            <td>{{ venta.articulo }}</td>
                                            <td>{{ venta.valor }}</td>
                                            <td>{% if venta.createdAt %}{{ venta.createdAt|date('Y-m-d H:i:s A') }}{% endif %}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('venta_show', { 'id': venta.id }) }}" class="btn btn-default btn-raised btn-xs"><i class="fa fa-check"></i>
                                                    </a>                        
                                                    <a href="{{ path('venta_edit', { 'id': venta.id }) }}" class="btn btn-default btn-raised btn-xs"><i class="fa fa-pencil"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table><!-- /.table -->
                            </div><!-- /.table-responsive -->
                        </div><!-- /.panel-body -->
                    </div><!-- .panel --> 
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div><!-- /.page-content -->
{% endblock %}