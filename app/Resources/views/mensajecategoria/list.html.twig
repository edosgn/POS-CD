<div class="no-padding"><!-- .panel-body -->
    {% if mensajeCategorias|length != 0 %}
    <small><i class="fa fa-tags"></i> Categorias de Mensajes</small>
    <div class="row"><!-- .row -->
        {% for mensajeCategoria in mensajeCategorias %}
            <div class="col-xs-12 col-sm-2 col-md-2 text-center">
                <a href="{{path('mensaje_list',{'idMensajeCategoria':mensajeCategoria.id})}}" class="find-mensaje btn btn-success btn-raised load-in-progress" data-id="#container-load">
                    {{ mensajeCategoria.nombre }}
                </a>
            </div>     
        {% endfor %}
    </div><!-- /.row -->
    {% else %}
    <h1 class="text-center">
        <i class="fa fa-exclamation-triangle fa-2x"></i>
        <br>
        No existen registros.
    </h1>
    {% endif %}
</div><!-- /.well -->