{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content"><!-- .page-content -->
        <ol class="breadcrumb"><!-- .breadcrumb -->
            <li class="">
                <a href="{{ path('homepage') }}">Inicio</a>
            </li>
            <li class="active">
                <a href="{{ path('cliente_index') }}">Clientes</a>
            </li>
        </ol><!-- /.breadcrumb -->
        <div class="page-heading"><!-- .page-heading -->
            <h1>Clientes
                <small>Listado</small>
            </h1>
            <div class="options">
                <a href="{{ path('cliente_new') }}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Cliente">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div><!-- /.page-heading -->

        <div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><!-- .col -->

                    <div class="panel panel-primary"><!-- .panel -->
                        <div class="panel-heading">
                            <h2>Usuarios</h2>
                            <div class="options">
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a href="#tab-1" data-toggle="tab">
                                            Clientes
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#tab-2" data-toggle="tab">
                                            Empresas
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="panel-body"><!-- .panel-body -->
                            <div class="tab-content"><!-- .tab-content -->
                                <div class="tab-pane active" id="tab-1"><!-- .tab-pane -->
                                    {% if clientes|length != 0 %}
                                        <h3>Listado de Clientes</h3>
                                        <div class="table-responsive"><!-- .table-responsive -->
                                            <table class="table table-bordered table-hover table-striped table-data"><!-- .table -->
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Tipo Cliente</th>
                                                        <th>Identificacion</th>               
                                                        <th>Nombres y Apellidos</th>
                                                        <th>Telefono</th>
                                                        <th>Correo</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% set count = 0 %}
                                                {% for cliente in clientes %}
                                                    {% set count = count + 1 %}
                                                    <tr>
                                                        <td>{{ count }}</td>
                                                        <td>{{ cliente.tipo }}</td>
                                                        <td><a href="{{ path('cliente_show', { 'id': cliente.id }) }}">{{ cliente.identificacion }}</a></td>      
                                                        <td>{{ cliente.nombre }} {{cliente.apellido}}</td>
                                                        <td>{{ cliente.telefono }}</td>
                                                        <td>{{ cliente.correo }}</td>             
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="{{ path('cliente_show', { 'id': cliente.id }) }}" class="btn btn-default btn-raised btn-xs">
                                                                    <i class="fa fa-check"></i>
                                                                </a>
                                                                <a href="{{ path('cliente_edit', { 'id': cliente.id }) }}" class="btn btn-default btn-raised btn-xs">
                                                                    <i class="fa fa-pencil"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table><!-- /.table -->
                                        </div><!-- /.table-responsive -->
                                    {% else %}
                                    <h1 class="text-center">
                                        <i class="fa fa-exclamation-triangle fa-2x"></i>
                                        <br>
                                        No existen registros.
                                    </h1>
                                    {% endif %}
                                </div><!-- /.tab-pane -->
                                <div class="tab-pane" id="tab-2"><!-- .tab-pane -->
                                    {% if empresas|length != 0 %}
                                        <h3>Listado de Empresas</h3>
                                        <div class="table-responsive"><!-- .table-responsive -->
                                            <table class="table table-bordered table-hover table-striped table-data"><!-- .table -->
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Tipo Cliente</th>
                                                        <th>Identificacion</th>               
                                                        <th>Nombres y Apellidos</th>
                                                        <th>Telefono</th>
                                                        <th>Correo</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% set count = 0 %}
                                                {% for cliente in empresas %}
                                                    {% set count = count + 1 %}
                                                    <tr>
                                                        <td>{{ count }}</td>
                                                        <td>{{ cliente.tipo }}</td>
                                                        <td><a href="{{ path('cliente_show', { 'id': cliente.id }) }}">{{ cliente.identificacion }}</a></td>      
                                                        <td>{{ cliente.nombre }} {{cliente.apellido}}</td>
                                                        <td>{{ cliente.telefono }}</td>
                                                        <td>{{ cliente.correo }}</td>             
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="{{ path('cliente_show', { 'id': cliente.id }) }}" class="btn btn-default btn-raised btn-xs">
                                                                    <i class="fa fa-check"></i>
                                                                </a>
                                                                <a href="{{ path('cliente_edit', { 'id': cliente.id }) }}" class="btn btn-default btn-raised btn-xs">
                                                                    <i class="fa fa-pencil"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table><!-- /.table -->
                                        </div><!-- /.table-responsive -->
                                    {% else %}
                                    <h1 class="text-center">
                                        <i class="fa fa-exclamation-triangle fa-2x"></i>
                                        <br>
                                        No existen registros.
                                    </h1>
                                    {% endif %}
                                </div><!-- /.tab-pane -->
                            </div><!-- /.tab-content -->
                        </div><!-- /.panel-body -->
                    </div><!-- /.panel -->
                               
                </div><!-- /.col -->
            </div><!-- /.row -->

        </div><!-- /.container-fluid -->
    </div><!-- /.page-content -->
{% endblock %}
