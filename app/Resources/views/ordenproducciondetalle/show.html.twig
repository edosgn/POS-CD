{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content"><!-- .page-content -->
        <ol class="breadcrumb"><!-- .breadcrumb -->
            <li class="">
                <a href="{{ path('homepage') }}">Inicio</a>
            </li>
            <li>
                <a href="{{ path('orden_produccion_show',{'id':ordenProduccionDetalle.ordenProduccion.id}) }}">Orden Produccion</a>
            </li>
            <li class="active">
                Ver
            </li>

        </ol><!-- /.breadcrumb -->
        <div class="page-heading"><!-- .page-heading -->
            <div class="row"><!-- .row -->
                <div class="col-sm-6"><!-- .col -->
                    <h1>
                        Orden Producci√≥n: 
                        <strong>{{ ordenProduccionDetalle.ordenProduccion.numero }} </strong>
                        <small>Ver</small>
                    </h1>
                </div><!-- /.col -->

                <div class="col-sm-4"><!-- .col -->
                    <h1>
                         Estado: 
                        <strong> {{ ordenProduccionDetalle.ordenProduccionEstado.nombre }} </strong>
                        
                    </h1>
                </div><!-- /.col -->

                <div class="options">
                    <a href="3" class="btn btn-info btn-raised" data-toggle="tooltip" data-placement="top" title="Volver al listado">
                        <i class="fa fa-chevron-left"></i>
                    </a>
                    <a href="#" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Mensaje">
                        <i class="fa fa-plus"></i>
                    </a>
                    <a href="#" class="btn btn-default btn-raised" data-toggle="tooltip" data-placement="top" title="Editar">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="#" class="btn btn-danger btn-raised" data-toggle="tooltip" data-placement="top" title="Eliminar">
                        <i class="fa fa-trash"></i>
                    </a>
                </div>
            </div><!-- /.row -->
        </div><!-- /.page-heading -->

        <div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
                <div class="col-sm-9">
                    <div class="col-sm-8"><!-- .col -->
                        <div class="panel panel-primary"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h1 class="text-center">
                                    <strong>{{ ordenProduccionDetalle.detalle }}</strong>
                                </h1>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div><!-- /.col -->
                    <div class="col-sm-4"><!-- .col -->
                        <div class="panel panel-success"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h1 class="text-center">
                                    <strong><i class="fa fa-dollar"></i>{{ ordenProduccionDetalle.precio }}</strong>
                                </h1>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div><!-- /.col -->
                    <div class="col-sm-12"><!-- .col -->
                        <div class="panel panel-danger"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h1 class="text-center">
                                    <strong>{{ ordenProduccionDetalle.observacion }}</strong>
                                </h1>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div><!-- /.col -->

                    <div class="col-sm-4"><!-- .col -->
                        <div class="panel panel-warning"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h3><small>Destinatario:</small></h3>
                                <h4>
                                    <strong>{{ ordenProduccionDetalle.ordenProduccion.destinatarioNombres ~ " " ~ ordenProduccionDetalle.ordenProduccion.destinatarioApellidos }}</strong>
                                </h4>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->

                        <div class="panel panel-warning"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h3><small>Firma:</small></h3>
                                <h4>
                                    <strong>{{ ordenProduccionDetalle.firma }}</strong>
                                </h4>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->

                        <div class="panel panel-warning"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h3><small>Comercial:</small></h3>
                                <h4>
                                    <strong>{{ ordenProduccionDetalle.ordenProduccion.pedido.usuario }}</strong>
                                </h4>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div><!-- /.col -->

                    <div class="col-sm-6"><!-- .col -->

                        <h1 class="text-center">
                            <a href="{{path('homepage')}}" class="btn btn-lg btn-raised btn-danger">
                                <i class="fa fa-pause fa-5x"></i>
                            </a>
                        {% if ordenProduccionDetalle.ordenProduccionEstado.nombre == "Asignada" %}
                            <a href="{{path('orden_produccion_asignar_estado',{'id':ordenProduccionDetalle.id,'idEstado':2})}}" class="btn btn-lg btn-raised btn-primary">
                                <i class="fa fa-play fa-5x"></i>
                            </a>                            
                        {% endif %}
                        {% if ordenProduccionDetalle.ordenProduccionEstado.nombre == "Produccion" %}
                        <a href="{{path('orden_produccion_asignar_estado',{'id':ordenProduccionDetalle.id,'idEstado':3})}}" class="btn btn-lg btn-raised btn-success">
                            <i class="fa fa-check fa-5x"></i>
                        </a> 
                        {% endif %}
                            
                        </h1>
                    </div><!-- /.col -->
                </div>

                <div class="col-sm-3">
                    <div class="col-sm-12"><!-- .col -->
                        <div class="panel panel-default"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h1 class="text-center">
                                    <div class="personel-info pt-n" ><!-- .personel-info -->
                                        <div id="tiempo">{{ nuevafecha  | cuenta_atras}}</div>
                                    </div><!-- /.personel-info -->
                                </h1>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->

                                
                    </div><!-- /.col -->
                    <div class="col-sm-12"><!-- .col -->
                        <div class="panel panel-default"><!-- .panel -->
                            <div class="panel-heading" style="height:10px;"><!-- .panel-heading -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body"><!-- .panel-body -->
                                <h1 class="text-center">
                                    <strong>
                                        {% if ordenProduccionDetalle.fotoObservacion == null%}
                                            <i class="fa fa-camera fa-4x"></i>
                                        {% else %}
                                            <a class="ejemplo_1" href="{{ asset("img/uploads/observations/"~ordenProduccionDetalle.fotoObservacion)}}" >
                                                <img src="{{ asset("img/uploads/observations/"~ordenProduccionDetalle.fotoObservacion)}}" width="310" height="250" />
                                            </a>
                                        {% endif %}
                                    </strong>
                                </h1>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->    
                    </div><!-- /.col -->
                </div>

                    
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->        
    </div><!-- /.page-content -->

{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{asset('js/fancy/source/jquery.fancybox.pack.js')}}"></script>
<script type="text/javascript" src="{{asset('js/fancy/source/jquery.fancybox.pack.js')}}"></script>
<link rel="stylesheet" type="text/css" href="{{asset('js/fancy/source/jquery.fancybox.css')}}" />
<script type="text/javascript">  
$(document).ready(function(){  
    $(".ejemplo_1").fancybox({  
        'autoScale'     : false,  
        'transitionIn'      : 'none',  
        'transitionOut'     : 'none',  
        'width'         : 800,  
        'height'        : 760,  
        'type'          : 'iframe',
        'scrolling'   : 'no'
        
    });  
});  
</script>  
{% endblock %}
