{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content"><!-- .page-content -->
        <ol class="breadcrumb"><!-- .breadcrumb -->
            <li class="">
                <a href="{{ path('homepage') }}">Inicio</a>
            </li>
            <li class="active">
                <a href="{{ path('pedido_index') }}">Pedidos</a>
            </li>
        </ol><!-- /.breadcrumb -->
        <div class="page-heading"><!-- .page-heading -->
            <h1>Pedido
                <small>Listado</small>
            </h1>
            <div class="options">
                <a href="{{ path('cliente_index') }}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Pedido">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div><!-- /.page-heading -->

        <div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><!-- .col -->
                    {% if pedidos|length != 0 %}
                    <div class="panel panel-default"><!-- .panel -->    
                        <div class="panel-body no-padding"><!-- .panel-body -->
                            <div class="table-responsive"><!-- .table-responsive -->
                                <table class="table table-bordered table-hover table-striped table-data"><!-- .table -->
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Usuario creador pedido</th>
                                            <th>Fecha Pedido</th>
                                            <th>Numero de Pedido</th>
                                            <th>Cliente</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% set count = 0 %}
                                    {% for pedido in pedidos %}
                                        {% set count = count + 1 %}
                                        <tr>
                                            <td>{{ count }}</td>
                                            <td>{{ pedido.usuario }}</td>
                                            <td>{% if pedido.createdAt %}{{ pedido.createdAt|date('Y-m-d H:i:s A') }}{% endif %}</td>
                                            <td><a href="{{ path('pedido_show', { 'id': pedido.id }) }}">{{ pedido.numero }}</a></td>
                                            <td>{{ pedido.cliente }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('pedido_show', { 'id': pedido.id }) }}" class="btn btn-default btn-raised btn-xs"><i class="fa fa-check"></i>
                                                    </a>                        
                                                    <a href="{{ path('pedido_edit', { 'id': pedido.id }) }}" class="btn btn-default btn-raised btn-xs"><i class="fa fa-pencil"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table><!-- /.table -->
                            </div><!-- /.table-responsive -->
                        </div><!-- /.panel-body -->
                    </div><!-- .panel -->
                    {% else %}
                    <h1 class="text-center">
                        <i class="fa fa-exclamation-triangle fa-2x"></i>
                        <br>
                        No existen registros.
                    </h1>
                    {% endif %}
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div><!-- /.page-content -->
{% endblock %}