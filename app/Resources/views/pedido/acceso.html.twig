{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content"><!-- .page-content -->
        <ol class="breadcrumb"><!-- .breadcrumb -->
            <li class="">
                <a href="{{ path('homepage') }}">Inicio</a>
            </li>
            <li class="active">
                <a href="{{ path('cliente_index') }}">Pedido</a>
            </li>
        </ol><!-- /.breadcrumb -->
        <div class="page-heading"><!-- .page-heading -->
            <h1>Nuevo Pedido
                <small>Listado Clientes</small>
            </h1>
            <div class="options">
                <a href="{{ path('cliente_new') }}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Cliente">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div><!-- /.page-heading -->

        <div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><!-- .col -->
                    <div class="panel panel-default"><!-- .panel -->    
                        <div class="panel-body no-padding"><!-- .panel-body -->
                            <h3 class="text-center">Clientes</h3>
                            <div class="table-responsive"><!-- .table-responsive -->
                                {% for cliente in clientes %}                                
                                    {% if cliente.tipo != 'empresa' %}
                                        <div class="col-xs-12 col-sm-3 col-md-2 text-center">
                                            <a href="{{ path('cliente_show', { 'id': cliente.id }) }}">
                                                <p><img src="/POS-CD/web/img/avatar/default.jpg"></p>
                                                <p>{{ cliente.identificacion }}</p>
                                                <p>{{ cliente.nombre }} {{cliente.apellido}}</p>
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endfor %}                                
                            </div><!-- /.table-responsive -->
                        </div><!-- /.panel-body -->
                    </div><!-- .panel --> 
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row"><!-- .row -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><!-- .col -->
                    <div class="panel panel-default"><!-- .panel -->    
                        <div class="panel-body no-padding"><!-- .panel-body -->
                            <h3 class="text-center">Empresas</h3>
                            <div class="table-responsive"><!-- .table-responsive -->
                                {% for cliente in clientes %}
                                    {% if cliente.tipo == 'empresa' %}
                                        <div class="col-xs-12 col-sm-3 col-md-2 text-center">
                                            <a href="{{ path('cliente_show', { 'id': cliente.id }) }}">
                                                <p><img src="/POS-CD/web/img/avatar/empresa.png"></p>
                                                <p>{{ cliente.empresa }}</p>
                                                <p>{{ cliente.nit }}</p>
                                                <p>{{ cliente.nombre }} {{cliente.apellido}}</p>
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div><!-- /.table-responsive -->
                        </div><!-- /.panel-body -->
                    </div><!-- .panel --> 
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div><!-- /.page-content -->
{% endblock %}
