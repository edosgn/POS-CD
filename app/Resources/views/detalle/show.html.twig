{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-content"><!-- .page-content -->
        <ol class="breadcrumb"><!-- .breadcrumb -->
            <li>
                <a href="{{ path('homepage') }}">Inicio</a>
            </li>
            <li>
                <a href="{{ path('detalle_index') }}">Detalles</a>
            </li>
            <li class="active">
                Editar
            </li>
        </ol><!-- /.breadcrumb -->
        <div class="page-heading"><!-- .page-heading -->
            <h1>Detalles
                <small>Ver</small>
            </h1>
            <div class="options">
                <a href="{{ path('detalle_index') }}" class="btn btn-info btn-raised" data-toggle="tooltip" data-placement="top" title="Volver al listado">
                    <i class="fa fa-chevron-left"></i>
                </a>
                <a href="{{ path('detalle_new') }}" class="btn btn-inverse btn-raised" data-toggle="tooltip" data-placement="top" title="Usuario">
                    <i class="fa fa-plus"></i>
                </a>
                <a href="{{ path('detalle_edit',{'id':detalle.id}) }}" class="btn btn-default btn-raised" data-toggle="tooltip" data-placement="top" title="Editar">
                    <i class="fa fa-pencil"></i>
                </a>
                <a href="{{ path('detalle_edit',{'id':detalle.id}) }}" class="btn btn-danger btn-raised" data-toggle="tooltip" data-placement="top" title="Eliminar">
                    <i class="fa fa-trash"></i>
                </a>
            </div>
        </div><!-- /.page-heading -->

        <div class="container-fluid"><!-- .container-fluid -->
            <div class="row"><!-- .row -->
                <div class="col-xs-12 col-sm-3"><!-- .col -->

                    <div class="card profile-card"><!-- .card -->
                        <div class="card-content"><!-- .card-content -->
                            <div class="pt-n text-center">
                                <div class="btn-group">
                                    <a href="{{ path('detalle_edit',{'id':detalle.id}) }}" class="btn btn-info btn-raised" data-toggle="tooltip" data-placement="top" title="Editar">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="{{ path('detalle_edit',{'id':detalle.id}) }}" class="btn btn-danger btn-raised" data-toggle="tooltip" data-placement="top" title="Eliminar">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body pt-n"><!-- .card-body -->
                                <h1 class="card-image-headline text-center"><!-- .card-image-headline -->
                                    <i class="fa fa-gift fa-5x img-responsive"></i>
                                    <small>{{ detalle }}</small>
                                </h1><!-- /.card-image-headline -->
                                <p>
                                    <i class="fa fa-dollar"></i>
                                    <strong>Precio Base: </strong>
                                    {{ detalle.precioBase }}  
                                </p>
                                <p>
                                    <i class="fa fa-tag"></i> 
                                    <strong>Categoria: </strong>
                                    {{ detalle.detalleCategoria }}
                                </p>
                                <hr>
                                <p>
                                    <strong>Descripci√≥n:</strong>
                                    {{ detalle.descripcion }}
                                </p>
                            </div><!-- /.card-body -->
                        </div><!-- /.card-content -->
                    </div><!-- /.card -->
                    
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
        
    </div><!-- /.page-content -->
{% endblock %}